<div class="col-md-4">
  <div class="list-group">
    <div class="list-group-item">
      {{input type="text" class="new-band" placeholder="New category" value=newName  }}
      <button class="btn btn-primary btn-sm new-band-button" {{action "createCategory"}}
        disabled={{disabled}}>Add</button>
    </div>
    {{#each categories as |category|}}
      {{#link-to "bands.band.songs" band class="list-group-item band-link"}}
        {{category.name}}
        <span class="pointer glyphicon glyphicon-chevron-right"></span>
      {{/link-to}}
    {{/each}}
  </div>
</div>
