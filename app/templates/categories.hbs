<div class="col-md-4">
  <div class="list-group">
    <div class="list-group-item">
      {{input type="text" class="new-band" placeholder="New category" value=newName insert-newline="createCategory" }}
      <button class="btn btn-primary btn-sm new-band-button" {{action "createCategory"}}
        disabled={{disabled}}>Add</button>
    </div>
    {{#each model as |category|}}
      {{#link-to "category" category class="list-group-item band-link"}}
        {{category.name}}
        <span class="pointer glyphicon glyphicon-chevron-right"></span>
      {{/link-to}}
    {{/each}}
  </div>
</div>
<div class="col-md-8">
  <div class="list-group">
    {{outlet}}
  </div>
</div>
